{{!-- 首页 --}}

<div class="container-fluid">
    <div class="row">
        {{!-- 左侧菜单栏 --}}

        <div class="left-menu">
            {{!-- 顶部logo和新建按钮 --}}
            <div class="logo">
                <div class="logo-img">
                    <img src="/assets/images/logo/logo-blue.png" alt="" width="40" height="40" title="Bootstrap">
                    小猿笔记
                </div>

                <div class="new-note p-4">
                    <button type="button" class="btn btn-block btn-primary">
                        <span class="new-text">新建笔记</span>
                        <svg class="bi bi-plus p-10" width="1.5em" height="1.5em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                          <path fill-rule="evenodd" d="M8 3.5a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-.5.5H4a.5.5 0 0 1 0-1h3.5V4a.5.5 0 0 1 .5-.5z"/>
                          <path fill-rule="evenodd" d="M7.5 8a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1H8.5V12a.5.5 0 0 1-1 0V8z"/>
                        </svg>
                    </button>
                </div>
            </div>

            {{!--左侧菜单的文件列表 --}}
            <LeftNoteTypeList />

        </div>  {{!-- left-menu end --}}


        {{!-- ================================  右侧内容区开始（包括笔记标题列表和编辑器）  ==================================== --}}

        {{!-- 右侧内容栏，内容栏又分为两列，一列是文章列表，一列是内容 --}}
        <div class="right-container">
            {{!--右侧顶部搜索框工具栏 --}}
            <SearchNote />

            {{!--右侧中间标题预览区 --}}
            <div class="review">
                <div class="row">
                    <NoteTitleList />

                    <NoteEditor />

                </div>
            </div>

        </div> {{!-- right-container end --}}

    </div>
</div>
