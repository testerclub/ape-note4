        <div class="left-menu">
            {{!-- 顶部logo和新建按钮 --}}
            <div class="logo">
                <div class="logo-img">
                    <img src="/assets/images/logo/logo-blue.png" alt="" width="40" height="40" title="Bootstrap">
                    小猿笔记
                </div>

                <div class="new-note p-4">
                    <button type="button" class="btn btn-block btn-primary">
                        <span class="new-text">新建笔记</span>
